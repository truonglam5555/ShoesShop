<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_address"
        style="@style/TextLayoutBasicStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_13"
        android:layout_marginTop="@dimen/spacing_13"
        android:text="@string/text_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_info_address_name"
        style="@style/TextLayoutDescriptionStyleMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_13"
        android:layout_marginEnd="@dimen/spacing_10"
        android:text="1082 Airport Road, Nigeria"
        android:textAlignment="textStart"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_address" />
    <ImageView
        android:layout_width="@dimen/button_size_16"
        android:layout_height="@dimen/button_size_16"
        android:id="@+id/ic_dropdown"
        android:src="@drawable/ic_dropdown"
        app:layout_constraintTop_toBottomOf="@id/tv_address"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_size_80"
        android:layout_marginTop="@dimen/spacing_13"
        app:layout_constraintTop_toBottomOf="@id/tv_info_address_name"
        android:src="@drawable/img_map"
        />

</androidx.constraintlayout.widget.ConstraintLayout>