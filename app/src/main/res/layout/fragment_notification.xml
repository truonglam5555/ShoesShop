<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_view_color"
    android:paddingBottom="@dimen/spacing_85"
    tools:context=".features.main.notification.NotificationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_of_header"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_header"
            android:id="@+id/layout_header"
            />
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/layout_of_header"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <include layout="@layout/layout_menu_horizontal"
                android:id="@+id/layout_recent"
                />
            <include layout="@layout/layout_menu_horizontal"
                android:id="@+id/layout_yesterday"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>